    "import cv2\n",
    "\n",
    "idx = 0\n",
    "while True:\n",
    "    cap = cv2.VideoCapture(idx)\n",
    "    if not cap.isOpened():\n",
    "        break\n",
    "    cap.release()\n",
    "    print(f\"camera {idx} is available\") \n",
    "    idx += 1\n",
    "\n",
    "\n"
   ]
  }
