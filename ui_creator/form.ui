    border-radius: 5px;       /* 圆角 */
    padding: 5px 10px;        /* 内边距 */
    border: none;             /* 无边框 */
}

/* 按钮鼠标悬停与点击效果 */
QPushButton:hover {
    background-color: #2980b9;
}
QPushButton:pressed {
    background-color: #1f6391;
}

/* 文本输入框 */
QLineEdit {
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 2px 4px;
    background-color: #ffffff;
    color: #333333;
}

/* 文本输入框获得焦点时边框高亮 */
QLineEdit:focus {
    border: 2px solid #3498db;
}

/* GroupBox 外观 */
QGroupBox {
    border: 1px solid gray; 
    border-radius: 5px;     
    margin-top: 1em;        
    background-color: #ffffff;
}

/* GroupBox 标题的位置和样式 */
